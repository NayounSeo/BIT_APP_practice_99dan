<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.estsoft.gugudanfighter.GameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정답"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#6D6D6D"
        android:textSize="18dp" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="49"
        android:id="@+id/button1"
        android:layout_marginTop="114dp"
        android:textSize="32dp"
        android:textColor="#90C0FF"
        android:layout_below="@+id/textView1"
        android:layout_alignRight="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="93"
        android:id="@+id/button2"
        android:textSize="32dp"
        android:textColor="#FFA0A0"
        android:layout_above="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="25"
        android:id="@+id/button3"
        android:textSize="32dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:textColor="#90C0FF" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="18"
        android:id="@+id/button4"
        android:textSize="32dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/button1"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5"
        android:textColor="#FFA0A0" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="56"
        android:id="@+id/button5"
        android:textSize="32dp"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:textColor="#90C0FF" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="64"
        android:id="@+id/button6"
        android:textSize="32dp"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:textColor="#FFA0A0" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="72"
        android:id="@+id/button7"
        android:textSize="32dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/button9"
        android:layout_toLeftOf="@+id/button8"
        android:layout_toStartOf="@+id/button8"
        android:textColor="#90C0FF" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="36"
        android:id="@+id/button8"
        android:textSize="32dp"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_alignParentEnd="false"
        android:textColor="#FFA0A0" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="81"
        android:id="@+id/button9"
        android:textSize="32dp"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:textColor="#90C0FF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남은시간"
        android:id="@+id/textView2"
        android:textSize="18dp"
        android:textColor="#A09090"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/timeLeft"
        android:layout_toStartOf="@+id/timeLeft" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초"
        android:id="@+id/textView3"
        android:textSize="18dp"
        android:textColor="#A09090"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / -"
        android:id="@+id/resultView"
        android:textColor="#A09090"
        android:textSize="18dp"
        android:layout_marginLeft="8dp"
        android:layout_above="@+id/button1"
        android:layout_toRightOf="@+id/textView1"
        android:layout_toEndOf="@+id/textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/oprnd"
        android:textSize="52dp"
        android:textColor="#FFA0A0"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/rightOprnd"
        android:textSize="52dp"
        android:textColor="#90C0FF"
        android:layout_alignTop="@+id/oprnd"
        android:layout_toRightOf="@+id/oprnd"
        android:layout_toEndOf="@+id/oprnd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equals"
        android:textSize="52dp"
        android:textColor="#FFA0A0"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:id="@+id/timeLeft"
        android:textSize="18dp"
        android:textColor="#6D6D6D"
        android:layout_toLeftOf="@+id/textView3"
        android:layout_toStartOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/leftOprnd"
        android:textSize="52dp"
        android:textColor="#90C0FF"
        android:layout_alignTop="@+id/oprnd"
        android:layout_toLeftOf="@+id/oprnd"
        android:layout_toStartOf="@+id/oprnd" />

</RelativeLayout>
