<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.estsoft.gugudanfighter.HelpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="구구단"
        android:id="@+id/textView_helpTitle_1"
        android:textColor="#FFA0A0"
        android:textSize="40dp"
        android:typeface="sans"
        android:textStyle="bold"
        android:focusableInTouchMode="false"
        android:layout_marginTop="74dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView_help_message"
        android:layout_alignStart="@+id/textView_help_message" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="파이터는?"
        android:id="@+id/textView_helpTitle_2"
        android:textSize="40dp"
        android:textColor="#90C0FF"
        android:textStyle="bold"
        android:layout_below="@+id/textView_helpTitle_1"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_help"
        android:id="@+id/textView_help_message"
        android:typeface="sans"
        android:autoText="false"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#6D6D6D"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView_helpTitle_2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/maker_email"
        android:id="@+id/textView11"
        android:textColor="#A09090"
        android:layout_marginBottom="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView_help_message"
        android:layout_alignEnd="@+id/textView_help_message" />

</RelativeLayout>
